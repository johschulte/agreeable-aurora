---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Modern App with Astro & PostgreSQL</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <div class="relative flex min-h-screen flex-col">
      <header
        class="sticky top-0 z-40 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
      >
        <div class="container flex h-14 items-center">
          <div class="mr-4 flex">
            <a href="/" class="flex items-center space-x-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="h-6 w-6"
              >
                <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                <path d="M2 17l10 5 10-5"></path>
                <path d="M2 12l10 5 10-5"></path>
              </svg>
              <span class="font-bold">ModernApp</span>
            </a>
          </div>
          <nav class="flex items-center space-x-6 text-sm font-medium">
            <a href="/" class="transition-colors hover:text-foreground/80"
              >Home</a
            >
            <a
              href="/db-demo"
              class="transition-colors hover:text-foreground/80">DB Demo</a
            >
            <a href="/lists" class="transition-colors hover:text-foreground/80"
              >Lists</a
            >
          </nav>
          <div class="flex flex-1 items-center justify-end space-x-2">
            <nav class="flex items-center space-x-1">
              <a
                href="/"
                class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 w-9"
                title="Neue Liste erstellen"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-5 w-5"
                >
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M12 8v8"></path>
                  <path d="M8 12h8"></path>
                </svg>
                <span class="sr-only">Neue Liste erstellen</span>
              </a>
            </nav>
          </div>
        </div>
      </header>
      <div class="flex-1">
        <slot />
      </div>
      <footer class="border-t py-6 md:py-0">
        <div
          class="container flex flex-col items-center justify-between gap-4 md:h-16 md:flex-row"
        >
          <p
            class="text-center text-sm leading-loose text-muted-foreground md:text-left"
          >
            &copy; {new Date().getFullYear()} ModernApp. All rights reserved.
          </p>
          <div class="flex items-center gap-4">
            <a
              href="https://github.com"
              target="_blank"
              rel="noreferrer"
              class="text-sm font-medium underline underline-offset-4"
            >
              GitHub
            </a>
            <a
              href="https://twitter.com"
              target="_blank"
              rel="noreferrer"
              class="text-sm font-medium underline underline-offset-4"
            >
              Twitter
            </a>
          </div>
        </div>
      </footer>
    </div>
    <style is:global>
      :root {
        --font-sans: "Inter", system-ui, -apple-system, BlinkMacSystemFont,
          "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      }

      body {
        font-family: var(--font-sans);
      }

      @keyframes fade-in {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      main {
        animation: fade-in 0.3s ease;
      }
    </style>
  </body>
</html>
